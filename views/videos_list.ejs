<!DOCTYPE html>
<html>
  <head>
    <title>FreeTube</title>
    <link rel='stylesheet' href='/stylesheets/style.css' />
     <link href="/bower_components/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet">
  </head>
  <body>

 <!-- Static navbar -->
    <nav class="navbar navbar-default navbar-static-top">
      <div class="container">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbar" aria-expanded="false" aria-controls="navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="/">FreeTube</a>
        </div>

        <div id="navbar" class="navbar-collapse collapse">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>

          <form class="navbar-form navbar-left">
            <div class="form-group">
              <input type="text" id="searchText" class="form-control" placeholder="Search">
            </div>
            <span type="submit" class="btn btn-default" onclick="search();">Submit</span>
          </form>

          <ul class="nav navbar-nav navbar-right">
            <li><a href="../navbar/">Login</a></li>
          </ul>

        </div><!--/.nav-collapse -->
      </div>
    </nav>

    <div class="container">

            <% for(var i=0; i<videos.length; i++) {%>
                
                <div class="media">
                <div class="media-left">
                    <a href="/videos/watch/<%= videos[i].hash %>">
                    <img class="media-object" height="138" width="246" src="<%= videos[i].thumbUrl %>" alt="<%= videos[i].title %>">
                    </a>
                </div>
                <div class="media-body">
                    <h4 class="media-heading"><%= videos[i].title %></h4>
                    <%= videos[i].description %>
                </div>
                </div>

            <% } %>

    </div> <!-- /container -->


   <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="/bower_components/jquery/dist/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="/bower_components/bootstrap/dist/js/bootstrap.min.js"></script>    

    <script>
        
        function search() {
          window.location = "/videos/list/" + $("#searchText").val();
        }

    </script>

  </body>
</html>
